<style>
  /* Main Container */
  .st_benefits-wrapper--{{ section.id }} {
    padding: {{ section.settings.space_top }}px 15px {{ section.settings.space_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .st_benefits-inner--{{ section.id }} {
    {% unless section.settings.full_width %}
    max-width: {{ section.settings.section_max_width }}px;
    {% endunless %}
    width: 100%;
    margin: 0 auto;
  }

  /* Main Title Section */
  .st_benefits-header--{{ section.id }} {
    text-align: {{ section.settings.title_alignment }};
    margin-bottom: {{ section.settings.title_spacing }}px;
  }

  {{ section.settings.title_font | font_face: font_display: 'swap' }}

  .st_benefits-title--{{ section.id }}, .st_benefits-title--{{ section.id }} .highlight {
    font-size: {{ section.settings.title_size }}px;
    line-height: {{ section.settings.title_line_height }};
    color: {{ section.settings.title_color }};
    margin: 0;
    {% if section.settings.title_font %}
      font-family: {{ section.settings.title_font.family }}, {{ section.settings.title_font.fallback_families }};
      font-weight: {{ section.settings.title_font.weight }};
    {% endif %}
  }

  .st_benefits-title--{{ section.id }} .highlight {
    color: {{ section.settings.highlight_color }} !important;
    display: inline;
  }

  {{ section.settings.subtitle_font | font_face: font_display: 'swap' }}

  .st_benefits-subtitle--{{ section.id }} {
    font-size: {{ section.settings.subtitle_size }}px;
    line-height: {{ section.settings.subtitle_line_height }};
    color: {{ section.settings.subtitle_color }};
    margin: {{ section.settings.subtitle_margin }}px 0 0 0;
    {% if section.settings.subtitle_font %}
      font-family: {{ section.settings.subtitle_font.family }}, {{ section.settings.subtitle_font.fallback_families }};
      font-weight: {{ section.settings.subtitle_font.weight }};
    {% endif %}
  }

  /* Benefits Grid */
  .st_benefits-grid--{{ section.id }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
  }

  /* Benefit Item */
  .st_benefits-item--{{ section.id }} {
    display: flex;
    flex-direction: column;
    align-items: {{ section.settings.item_alignment }};
    text-align: {{ section.settings.item_alignment }};
    gap: {{ section.settings.item_gap }}px;
  }

  /* Item Icon */
  .st_benefits-item-icon--{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.item_alignment }};
    margin-bottom: 5px;
    width: 100%;
  }

  .st_benefits-item-icon--{{ section.id }} img, .st_benefits-item-icon--{{ section.id }} svg {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    object-fit: contain;
  }

  /* Item Content */
  .st_benefits-item-content--{{ section.id }} {
    flex: 1;
  }

  /* Item Title */
  {{ section.settings.item_title_font | font_face: font_display: 'swap' }}

  .st_benefits-item-title--{{ section.id }} {
    font-size: {{ section.settings.item_title_size }}px;
    line-height: {{ section.settings.item_title_line_height }};
    color: {{ section.settings.item_title_color }};
    margin: 0 0 {{ section.settings.item_title_margin }}px 0;
    text-transform: uppercase;
    {% if section.settings.item_title_font %}
      font-family: {{ section.settings.item_title_font.family }}, {{ section.settings.item_title_font.fallback_families }};
      font-weight: {{ section.settings.item_title_font.weight }};
    {% endif %}
  }

  /* Item Description */
  {{ section.settings.item_desc_font | font_face: font_display: 'swap' }}

  .st_benefits-item-desc--{{ section.id }} {
    font-size: {{ section.settings.item_desc_size }}px;
    line-height: {{ section.settings.item_desc_line_height }};
    color: {{ section.settings.item_desc_color }};
    margin: 0;
    {% if section.settings.item_desc_font %}
      font-family: {{ section.settings.item_desc_font.family }}, {{ section.settings.item_desc_font.fallback_families }};
      font-weight: {{ section.settings.item_desc_font.weight }};
    {% endif %}
  }

  /* Responsive adjustments */
  @media screen and (max-width: 768px) {
    .st_benefits-wrapper--{{ section.id }} {
      {% if section.settings.mobile_display_mode == 'scrollable' %}
      padding: {{ section.settings.space_top | divided_by: 2 }}px 0 {{ section.settings.space_bottom | divided_by: 2 }}px;
      {% else %}
      padding: {{ section.settings.space_top | divided_by: 2 }}px 15px {{ section.settings.space_bottom | divided_by: 2 }}px;
      {% endif %}
    }

    {% if section.settings.mobile_display_mode == 'scrollable' %}
    .st_benefits-header--{{ section.id }} {
      padding: 0 15px;
    }
    {% endif %}

    .st_benefits-title--{{ section.id }}, .st_benefits-title--{{ section.id }} .highlight {
      font-size: {{ section.settings.mobile_title_size }}px;
    }

    .st_benefits-subtitle--{{ section.id }} {
      font-size: {{ section.settings.mobile_subtitle_size }}px;
    }

    {% if section.settings.mobile_display_mode == 'scrollable' %}
    .st_benefits-grid--{{ section.id }} {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none; /* Firefox */
      -ms-overflow-style: none; /* IE and Edge */
      padding: 0 15px;
      gap: {{ section.settings.grid_gap | divided_by: 1.5 }}px;
    }

    /* Hide scrollbar */
    .st_benefits-grid--{{ section.id }}::-webkit-scrollbar {
      display: none; /* Chrome, Safari and Opera */
    }

    .st_benefits-item--{{ section.id }} {
      flex: 0 0 {% if section.settings.columns_mobile == '2' %}48%{% else %}85%{% endif %};
      scroll-snap-align: start;
      padding-left: 15px;
    }

    /* First item padding fix */
    .st_benefits-item--{{ section.id }}:first-child {
      margin-left: 0;
    }

    /* Last item padding fix */
    .st_benefits-item--{{ section.id }}:last-child {
      margin-right: 15px;
    }
    {% else %}
    .st_benefits-grid--{{ section.id }} {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: {{ section.settings.grid_gap | divided_by: 1.5 }}px;
    }
    {% endif %}

    .st_benefits-item-icon--{{ section.id }} img, .st_benefits-item-icon--{{ section.id }} svg {
      width: {{ section.settings.icon_size | times: 0.8 }}px;
      height: {{ section.settings.icon_size | times: 0.8 }}px;
    }

    .st_benefits-item-title--{{ section.id }} {
      font-size: {{ section.settings.item_title_size | times: 0.9 }}px;
    }

    .st_benefits-item-desc--{{ section.id }} {
      font-size: {{ section.settings.item_desc_size | times: 0.9 }}px;
    }
  }
