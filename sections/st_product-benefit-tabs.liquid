<style>
  {{ subtitle_font | font_face }}
  {{ title_font | font_face }}
  {{ text_font | font_face }}

  {% unless section.settings.show_tabs %}
    .st-product-benefit-tabs-section .swiper-pagination-benefit-tabs,
    .st-product-benefit-tabs-section .st-product-benefit-tabs-section-dropdown {
      display: none !important;
    }
  {% endunless %}

  .st-product-benefit-tabs-section div:empty {
    display: flex !important ;
  }

  .st-product-benefit-tabs-section {
    position: relative;
    width: 100%;
    max-width: {{ max_width }}px;
    margin: {{ section.settings.margin_top }}px auto {{ section.settings.margin_bottom }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-inline: 20px;
  }

  .st-product-benefit-tabs-section-heading {
    margin-bottom: 20px;
  }

  .st-product-benefit-tabs-section-heading * {
    font-size: {{ section.settings.title_fontsize_desktop }}px;
    font-family: {{ title_font.family }}, {{ title_font.fallback_families }};
    font-weight: {{ title_font.weight }};
    line-height: 1.2;
    color: {{ section.settings.title_color }};
  }

  .st-product-benefit-tabs-section .swiper {
    width: 80%;
    height: 100%;
    max-width: {{ max_width }}px;
  }

  .st-product-benefit-tabs-section .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 7%;
  }

  .st-product-benefit-tabs-section-text-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    min-width: 45%;
    max-width: 45%;
  }

  .st-product-benefit-tabs-section-text-content-subheading {
    font-size: {{ section.settings.subtitle_fontsize_desktop }}px;
    font-family: {{ subtitle_font.family }}, {{ subtitle_font.fallback_families }};
    font-weight: {{ subtitle_font.weight }};
    line-height: 1.2;
    margin-bottom: 5px;
    color: {{ section.settings.subtitle_color }};
  }

  .st-product-benefit-tabs-section-text-content-description {
    font-size: {{ section.settings.text_fontsize }}px;
    font-family: {{ text_font.family }}, {{ text_font.fallback_families }};
    font-weight: {{ text_font.weight }};
    color: {{ section.settings.description_color }} !important;
  }

  .st-product-benefit-tabs-section-text-content-description p {
    font-size: {{ section.settings.text_fontsize }}px;
    font-family: {{ text_font.family }}, {{ text_font.fallback_families }};
    font-weight: {{ text_font.weight }};
    color: {{ section.settings.description_color }} !important;
  }

  .st-product-benefit-tabs-section-image-content {
    display: flex;
    align-items: center;
    justify-content: center;
    max-height: {{max_height}}px;
    border-radius: 15px;
    overflow: hidden;
    width: 100%;
    height: {{max_height}}px;
  }

  .st-product-benefit-tabs-section-image-content img {
    border-radius: 15px;
    width: auto;
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .st-product-benefit-tabs-section .swiper-button-next,
  .st-product-benefit-tabs-section .swiper-button-prev {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    position: absolute;
    text-rendering: auto;
    top: 58%;
    z-index: 1;
    background-color: {{ section.settings.nav_button_background }};
    box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 50px;
  }

  .st-product-benefit-tabs-section .swiper-button-next::after,
  .st-product-benefit-tabs-section .swiper-button-prev::after {
    font-size: 15px;
    font-weight: bolder;
    color: {{ section.settings.nav_button_arrow }};
  }

  .st-product-benefit-tabs-section .swiper-pagination-benefit-tabs {
    bottom: unset !important;
    margin-bottom: 35px !important;
    position: relative;
    text-align: center;
    transform: translate3d(0, 0, 0);
    z-index: 1;
    display: flex;
    justify-content: center;
    gap: 10px;
    height: fit-content;
    width: fit-content !important;
    background-color: {{ section.settings.tab_background }};
    border-radius: 10px;
    margin-inline: 20px;
  }

  .st-product-benefit-tabs-section .swiper-pagination-bullet {
    margin: 0px !important;
    border-radius: 10px !important;
    width: fit-content !important ;
    padding: 10px 20px !important;
    height: 50px !important;
    text-align: center !important;
    font-size: 15px !important;
    font-family: {{ section.settings.tab_font.family }}, {{ section.settings.tab_font.fallback_families }} !important;
    font-weight: {{ section.settings.tab_font.weight }} !important;
    font-size: {{ section.settings.tab_fontsize }}px !important;
    color: {{ section.settings.tab_text }} !important;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    gap: 10px !important;
    opacity: 1 !important;
    background-color: {{ section.settings.tab_background }} !important;
    transition: scale 0.5s ease-in-out !important;
  }

  .st-product-benefit-tabs-section .swiper-pagination-bullet h1 {
    font-size: {{ section.settings.tab_fontsize }}px !important;
    font-family: {{ section.settings.tab_font.family }}, {{ section.settings.tab_font.fallback_families }} !important;
    font-weight: {{ section.settings.tab_font.weight }} !important;
  }

  .st-product-benefit-tabs-section .swiper-pagination-bullet:hover {
    scale: 1.05 !important;
  }

  .st-product-benefit-tabs-section .swiper-pagination-bullet img {
    width: 20px !important;
    height: 20px !important;
    min-height: 20px !important;
    min-width: 20px !important;
    object-fit: contain !important;
    position: relative !important;
    border-radius: 5px !important;
  }

  .st-product-benefit-tabs-section .swiper-pagination-bullet-active {
    background-color: {{ section.settings.active_tab_background }} !important;
    border: {{ section.settings.active_tab_border_thickness }}px solid {{ section.settings.active_tab_border }} !important;
  }

  .st-product-benefit-tabs-section .swiper-pagination-bullet-active h1 {
    color: {{ section.settings.active_tab_text }} !important;
  }

  .st-product-benefit-tabs-section .swiper-button-next {
    right: 5% !important;
  }

  .st-product-benefit-tabs-section .swiper-button-prev {
    left: 5% !important;
  }

  .st-product-benefit-tabs-section-dropdown {
    position: relative;
    display: none;
    padding-bottom: 20px;
    font-family: {{ section.settings.tab_font.family }} !important, {{ section.settings.tab_font.fallback_families }} !important;
    font-weight: {{ section.settings.tab_font.weight }} !important;
  }

  .st-product-benefit-tabs-section-dropdown::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    height: 10px;
    background-color: transparent;
  }

  .st-product-benefit-tabs-section-dropdown button {
    min-width: 180px;
    width: fit-content;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    border-radius: 5px;
    padding: 10px 20px;
    font-size: 14px;
    color: {{ section.settings.tab_text }};
    background-color: {{ section.settings.tab_background }};
    font-family: {{ section.settings.tab_font.family }}, {{ section.settings.tab_font.fallback_families }};
    font-weight: {{ section.settings.tab_font.weight }};
    font-size: {{ section.settings.tab_fontsize }}px;
    cursor: pointer;
  }

  .st-product-benefit-tabs-section-dropdown-button img {
    width: 20px;
    height: 20px;
    min-height: 20px;
    min-width: 20px;
    object-fit: contain;
    position: relative;
    border-radius: 5px;
  }

  .st-product-benefit-tabs-section-dropdown-content {
    display: none;
    position: absolute;
    background-color: {{ section.settings.tab_background }};
    transform: translate(-50%, 0);
    top: 80%;
    left: 50%;
    min-width: 100%;
    z-index: 2 !important;
    border-radius: 10px;
    font-size: 14px;
    cursor: pointer;
    font-family: {{ section.settings.tab_font.family }}, {{ section.settings.tab_font.fallback_families }};
    font-weight: {{ section.settings.tab_font.weight }};
    font-size: {{ section.settings.tab_fontsize }}px;
  }

  .st-product-benefit-tabs-section-dropdown-content * {
    font-family: {{ section.settings.tab_font.family }}, {{ section.settings.tab_font.fallback_families }};
    font-weight: {{ section.settings.tab_font.weight }};
    font-size: {{ section.settings.tab_fontsize }}px;
  }

  .st-product-benefit-tabs-section-dropdown-content div {
    color: {{ section.settings.tab_text }};
    padding: 12px 16px;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    white-space: nowrap;
  }

  .st-product-benefit-tabs-section-dropdown-content div img {
    width: 20px;
    height: 20px;
    min-height: 20px;
    min-width: 20px;
    object-fit: contain;
    position: relative;
  }

  .st-product-benefit-tabs-section-dropdown-content div.active {
    color: {{ section.settings.active_tab_text }};
    background-color: {{ section.settings.active_tab_background }};
    font-weight: bold;
    border: {{ section.settings.active_tab_border_thickness }}px solid {{ section.settings.active_tab_border }};
    border-radius: 10px;
  }

  .st-product-benefit-tabs-section-text-content-icon {
    width: 50px;
    height: 50px;
    min-height: 50px;
    min-width: 50px;
    border-radius: 5px;
    overflow: hidden;
    object-fit: contain;
    position: relative;
    margin-bottom: 10px;
  }

  @media (max-width: 1024px) {
    .st-product-benefit-tabs-section .swiper-button-next,
    .st-product-benefit-tabs-section.swiper-button-prev {
      top: 45%;
    }

    .st-product-benefit-tabs-section .swiper-pagination-benefit-tabs {
      display: none;
    }

    .st-product-benefit-tabs-section-dropdown {
      display: inline-block;
    }

    .st-product-benefit-tabs-section .swiper-slide {
      gap: 20px;
      flex-direction: column-reverse;
      align-items: stretch;
    }

    .st-product-benefit-tabs-section-text-content {
      max-width: 100%;
      align-items: {% if section.settings.text_alignment == "center" %}center{% elsif section.settings.text_alignment == "left" %}flex-start{% else %}flex-end{% endif %};
      text-align: {{ section.settings.text_alignment }};
    }

    .st-product-benefit-tabs-section-heading * {
      font-size: {{ section.settings.title_fontsize_mobile | plus: 10 }}px;
      text-align: center;
    }

    .st-product-benefit-tabs-section-image-content {
      width: 90%;
      margin: 0 auto;
    }

    .st-product-benefit-tabs-section .swiper {
      width: 100%;
    }

    .st-product-benefit-tabs-section-text-content-description {
      text-align: {{ section.settings.text_alignment }};
    }

    .st-product-benefit-tabs-section-text-content-subheading {
      text-align: {{ section.settings.text_alignment }};
      width: 100%;
    }
  }

  @media (max-width: 700px) {
    .st-product-benefit-tabs-section .swiper-button-next,
    .st-product-benefit-tabs-section .swiper-button-prev {
      top: 35%;
    }

    .st-product-benefit-tabs-section-heading * {
      font-size: {{ section.settings.title_fontsize_mobile }}px;
      text-align: center;
    }

    .st-product-benefit-tabs-section-image-content {
      width: 100%;
      max-height: unset;
      height: 100%;
    }

    .st-product-benefit-tabs-section-text-content-subheading {
      font-size: {{ section.settings.subtitle_fontsize_mobile }}px;
    }
  }
</style>

<div
  id="product-benefit-tabs-data"
  data-icons="[{% for block in section.blocks %}{% if block.settings.slider_icon %}&quot;{{ block.settings.slider_icon | image_url: width: 100 }}&quot;{% else %}&quot;https://cdn.shopify.com/s/files/1/0799/5880/2740/files/perfume_1.svg?v=1728075130&quot;{% endif %}{% unless forloop.last %},{% endunless %}{% endfor %}]"
  data-menu="[{% for block in section.blocks %}&quot;{{ block.settings.icon_title }}&quot;{% unless forloop.last %},{% endunless %}{% endfor %}]"
  data-showicons="{{ section.settings.show_icons | json }}"
></div>

<div class="st_wrapper st_check-section--{{ section.id }}">
  <section class="st-product-benefit-tabs-section">
    <div class="st-product-benefit-tabs-section-heading">
      <h1>{{ section.settings.title }}</h1>
    </div>

    <div class="swiper-pagination-benefit-tabs"></div>
    <div class="st-product-benefit-tabs-section-dropdown">
      <button class="st-product-benefit-tabs-section-dropdown-button">Soft as a cloud</button>
      <div id="myDropdown" class="st-product-benefit-tabs-section-dropdown-content"></div>
    </div>

    <div class="swiper st-product-benefit-tabs-section-swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="st-product-benefit-tabs-section-text-content">
              {% if section.settings.show_icons %}
                <div class="st-product-benefit-tabs-section-text-content-icon">
                  {% if block.settings.slider_icon %}
                    <img src="{{ block.settings.slider_icon | image_url: width: 100 }}">
                  {% else %}
                    <img src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/perfume_1.svg?v=1728075130">
                  {% endif %}
                </div>
              {% endif %}
              <h2 class="st-product-benefit-tabs-section-text-content-subheading">
                {{ block.settings.slider_subtitle }}
              </h2>
              <h3 class="st-product-benefit-tabs-section-text-content-description">
                {{ block.settings.slider_description }}
              </h3>
            </div>
            <div class="st-product-benefit-tabs-section-image-content">
              {% if block.settings.slider_image %}
                <img src="{{ block.settings.slider_image | image_url: width: 800 }}">
              {% else %}
                <img src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/placeholder_1920x1080_6e9610d7-ed6c-4956-9a78-a861864db570.png?v=1728076384">
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </section>
</div>

