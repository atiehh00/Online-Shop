<script>
  // Function to initialize animations for a section
  function initNumberAnimations(sectionId) {
    const section = document.querySelector(`.st_check-section--${sectionId}`);
    if (!section) return;
    
    {% if section.settings.enable_animation %}
    // Initialize counters to zero
    section.querySelectorAll('[data-number-value]').forEach(element => {
      element.textContent = "0";
      // Remove animated class to allow re-animation
      element.classList.remove('animated');
      element.classList.remove('fade-in');
    });
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const numberElement = entry.target.querySelector('[data-number-value]');
          if (numberElement && !numberElement.classList.contains('animated')) {
            const targetNumber = parseInt(numberElement.getAttribute('data-number-value'), 10);
            animateNumberPremium(numberElement, targetNumber);
            numberElement.classList.add('animated');
          }
        }
      });
    }, { threshold: 0.1, rootMargin: '0px 0px -10% 0px' });
    
    section.querySelectorAll('.st_benefits-stat-box').forEach(box => {
      observer.observe(box);
    });
    
    function animateNumberPremium(element, targetNumber) {
      // Handle edge cases
      if (isNaN(targetNumber) || targetNumber === 0) {
        element.textContent = targetNumber || "0";
        return;
      }

      // Add 'animating' class for subtle opacity
      element.classList.add('animating');
      
      const duration = {{ section.settings.number_animation_duration }};
      const startTime = performance.now();
      
      // Function to calculate easing - starts fast and slows down towards the end
      function easeOutQuint(t) {
        // easeOutQuint function: starts fast and gradually slows down
        // This gives a nice "deceleration" feel as numbers approach their final value
        return 1 - Math.pow(1 - t, 5);
      }
      
      function updateNumber(currentTime) {
        const elapsed = currentTime - startTime;
        
        if (elapsed >= duration) {
          element.textContent = targetNumber;
          element.classList.remove('animating');
          element.classList.add('fade-in');
          return;
        }
        
        // Get normalized progress and apply easing
        const t = Math.min(elapsed / duration, 1);
        const easedProgress = easeOutQuint(t);
        
        // Calculate current value with fast initial progress
        const current = Math.round(targetNumber * easedProgress);
        element.textContent = current;
        
        requestAnimationFrame(updateNumber);
      }
      
      requestAnimationFrame(updateNumber);
    }
    {% else %}
    // If animation is disabled, set all numbers to their final values immediately
    section.querySelectorAll('[data-number-value]').forEach(element => {
      element.textContent = element.getAttribute('data-number-value');
    });
    {% endif %}
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', function() {
    initNumberAnimations('{{ section.id }}');
  });
  
  // Re-initialize when the section is reloaded by Shopify
  document.addEventListener('shopify:section:load', function(event) {
    // Check if this is our section
    if (event.detail.sectionId === '{{ section.id }}') {
      initNumberAnimations(event.detail.sectionId);
    }
  });
</script>

