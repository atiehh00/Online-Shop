{% assign benefit_blocks_count = section.blocks.size %}

<div class="st_wrapper st_imwb-wrapper st_check-section--{{ section.id }}">
  <div class="st_ImageInfo">
    <div class="st_ImageInfo-TopTitle">{{ section.settings.headline_text }}</div>
    {% if benefit_blocks_count > 0 %}
      <div class="st_ImageInfo-benefits-wrapper">
        <div class="st_ImageInfo-Side st_ImageInfo-Left">
          {% for benefit_block in section.blocks %}
            {% if forloop.index0 == 0 or forloop.index0 == 2 or forloop.index0 == 4 %}
              <div class="st_ImageInfo-Box">
                {% if benefit_block %}
                  {% if benefit_block.settings.benefit_icon %}
                    <img
                      class="st_ImageInfo-Box-Icon"
                      src="{{ benefit_block.settings.benefit_icon | img_url: '100x100' }}"
                      width="{{ section.settings.icon_size_desktop }}"
                      height="{{ section.settings.icon_size_desktop }}"
                      alt="{{ benefit_block.settings.benefit_title }} icon"
                    >
                  {% else %}
                    <img
                      class="st_ImageInfo-Box-Icon"
                      src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/wind.svg?v=1718547931"
                      width="{{ section.settings.icon_size_desktop }}"
                      height="{{ section.settings.icon_size_desktop }}"
                      alt="Benefit icon"
                    >
                  {% endif %}
                  <div class="st_ImageInfo-Box-Title">{{ benefit_block.settings.benefit_title }}</div>
                  <div class="st_ImageInfo-Box-Text">
                    {{ benefit_block.settings.benefit_text }}
                  </div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="st_ImageInfo-Center">
          {% if section.settings.main_image %}
            {{ section.settings.main_image | image_url: width: 800 | image_tag: class: 'st_ImageInfo-Image', width: 800, height: 800, alt: section.settings.headline_text }}
          {% else %}
            <img
              class="st_ImageInfo-Image"
              src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/example_product_cropped.png?v=1718548170"
              width="800"
              height="800"
              alt="Product image"
            >
          {% endif %}
        </div>
        <div class="st_ImageInfo-Side st_ImageInfo-Right">
          {% for benefit_block in section.blocks %}
            {% if forloop.index0 == 1 or forloop.index0 == 3 or forloop.index0 == 5 %}
              <div class="st_ImageInfo-Box">
                {% if benefit_block %}
                  {% if benefit_block.settings.benefit_icon %}
                    <img
                      class="st_ImageInfo-Box-Icon"
                      src="{{ benefit_block.settings.benefit_icon | img_url: '100x100' }}"
                      width="{{ section.settings.icon_size_desktop }}"
                      height="{{ section.settings.icon_size_desktop }}"
                      alt="{{ benefit_block.settings.benefit_title }} icon"
                    >
                  {% else %}
                    <img
                      class="st_ImageInfo-Box-Icon"
                      src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/wind.svg?v=1718547931"
                      width="{{ section.settings.icon_size_desktop }}"
                      height="{{ section.settings.icon_size_desktop }}"
                      alt="Benefit icon"
                    >
                  {% endif %}
                  <div class="st_ImageInfo-Box-Title">{{ benefit_block.settings.benefit_title }}</div>
                  <div class="st_ImageInfo-Box-Text">
                    {{ benefit_block.settings.benefit_text }}
                  </div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% else %}
      <div class="st_ImageInfo-benefits-wrapper">
        <div class="st_ImageInfo-Side st_ImageInfo-Left">
          <div class="st_ImageInfo-Box">
            <img
              class="st_ImageInfo-Box-Icon"
              src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/wind.svg?v=1718547931"
              width="{{ section.settings.icon_size_desktop }}"
              height="{{ section.settings.icon_size_desktop }}"
              alt="Rich Aroma icon"
            >
            <div class="st_ImageInfo-Box-Title">Rich Aroma</div>
            <div class="st_ImageInfo-Box-Text">
              Enjoy the rich aroma and deep flavor of our freshly roasted coffee beans. Perfect to start your day right.
            </div>
          </div>
          <div class="st_ImageInfo-Box">
            <img
              class="st_ImageInfo-Box-Icon"
              src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/tree.svg?v=1718547931"
              width="{{ section.settings.icon_size_desktop }}"
              height="{{ section.settings.icon_size_desktop }}"
              alt="Sustainably Sourced icon"
            >
            <div class="st_ImageInfo-Box-Title">Sustainably Sourced</div>
            <div class="st_ImageInfo-Box-Text">
              Our beans are sourced sustainably from the best coffee plantations in the world, ensuring quality and ethical practices.
            </div>
          </div>
          <div class="st_ImageInfo-Box">
            <img
              class="st_ImageInfo-Box-Icon"
              src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/coffee-bean.svg?v=1718547931"
              width="{{ section.settings.icon_size_desktop }}"
              height="{{ section.settings.icon_size_desktop }}"
              alt="Expertly Roasted icon"
            >
            <div class="st_ImageInfo-Box-Title">Expertly Roasted</div>
            <div class="st_ImageInfo-Box-Text">
              Each batch is expertly roasted to highlight the unique aromas and characteristics of each bean.
            </div>
          </div>
        </div>
        <div class="st_ImageInfo-Center">
          {% if section.settings.main_image %}
            {{ section.settings.main_image | image_url: width: 800 | image_tag: class: 'st_ImageInfo-Image', width: 800, height: 800, alt: section.settings.headline_text }}
          {% else %}
            <img
              class="st_ImageInfo-Image"
              src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/example_product_cropped.png?v=1718548170"
              width="800"
              height="800"
              alt="Product image"
            >
          {% endif %}
        </div>
        <div class="st_ImageInfo-Side st_ImageInfo-Right">
          <div class="st_ImageInfo-Box">
            <img
              class="st_ImageInfo-Box-Icon"
              src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/flower-lotus.svg?v=1718547931"
              width="{{ section.settings.icon_size_desktop }}"
              height="{{ section.settings.icon_size_desktop }}"
              alt="Freshness Guaranteed icon"
            >
            <div class="st_ImageInfo-Box-Title">Freshness Guaranteed</div>
            <div class="st_ImageInfo-Box-Text">
              We guarantee the freshness of our coffee and offer a premium experience in every cup.
            </div>
          </div>
          <div class="st_ImageInfo-Box">
            <img
              class="st_ImageInfo-Box-Icon"
              src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/coffee.svg?v=1718547931"
              width="{{ section.settings.icon_size_desktop }}"
              height="{{ section.settings.icon_size_desktop }}"
              alt="Versatile Brewing icon"
            >
            <div class="st_ImageInfo-Box-Title">Versatile Brewing</div>
            <div class="st_ImageInfo-Box-Text">
              Whether you prefer espresso, filter coffee, or French press, our coffee beans are perfect for all brewing methods.
            </div>
          </div>
          <div class="st_ImageInfo-Box">
            <img
              class="st_ImageInfo-Box-Icon"
              src="https://cdn.shopify.com/s/files/1/0799/5880/2740/files/sparkle.svg?v=1718547931"
              width="{{ section.settings.icon_size_desktop }}"
              height="{{ section.settings.icon_size_desktop }}"
              alt="Delicious Taste icon"
            >
            <div class="st_ImageInfo-Box-Title">Delicious Taste</div>
            <div class="st_ImageInfo-Box-Text">
              Experience a delicious taste with every sip, perfected for coffee lovers around the world.
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>

